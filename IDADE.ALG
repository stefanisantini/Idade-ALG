algoritmo "idade"
var
ano, nasc, idade: inteiro
inicio
      escreva ("Em que ano estamos? ")
      leia (ano)
      escreva ("Em que ano nasceu? ")
      leia (nasc)
      idade <- (ano-nasc)
      escreval ("Em ", ano, " você terá ", idade, " anos")
      se (idade>= 21) entao
      escreval ("E você terá atingindo a maioridade")
      fimse
fimalgoritmo

